<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/WGameTitleTextView"
        style="@style/TTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Title" />

    <ImageView
        android:id="@+id/WCoverImageView"
        style="@style/Pic"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/WGameTitleTextView"
        android:src="@drawable/ac3" />

    <TextView
        android:id="@+id/WPriceTextView"
        style="@style/Wishlist_Item_Info"
        android:layout_alignTop="@+id/WCoverImageView"
        android:layout_toRightOf="@+id/WCoverImageView"
        android:text="console" />

    <TextView
        android:id="@+id/WConsoleTextView"
        style="@style/Wishlist_Item_Info"
        android:layout_alignLeft="@+id/WPriceTextView"
        android:layout_below="@+id/WPriceTextView"
        android:text="price" />

</RelativeLayout>