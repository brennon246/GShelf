<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Deal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/button1"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:textSize="10dp"
        android:layout_alignRight="@+id/DealEffectTextView"
        android:text="Add Deal" />

    <TextView
        android:id="@+id/DealEffectTextView"
        style="@style/Deal_Item_Text"
        android:layout_below="@+id/button1"
        android:layout_toRightOf="@+id/DealImageView"
        android:text="10% off Blizzard games" />

    <ImageView
        android:id="@+id/DealImageView"
        style="@style/Deal_Item_Pic"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/DealEffectTextView"
        android:src="@drawable/ac3" />

</RelativeLayout>