<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/T_Title"
        style="@style/TTitle"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="13dp"
        android:text="Title" />

    <TextView
        android:id="@+id/T_Console"
        style="@style/TConsole"
        android:layout_alignBaseline="@+id/T_Title"
        android:layout_alignBottom="@+id/T_Title"
        android:layout_marginLeft="21dp"
        android:layout_toRightOf="@+id/T_Title"
        android:text="Console" />

    <TextView
        android:id="@+id/T_Price"
        style="@style/Info_Genre"
        android:layout_alignLeft="@+id/T_Title"
        android:layout_below="@+id/T_Title"
        android:layout_marginTop="-5dp" 
        android:textStyle="italic"
        android:text="Price" />

</RelativeLayout>